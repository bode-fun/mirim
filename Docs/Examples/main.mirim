import std.fmt

struct Person {
    pub let name string

    // Implied if not specified
    init(name string) {
        self.name = name
    }

    pub fun say_hello(self) string {
        return `Hello, ${self.name}\n`
    }
}

pub fun main(args string[]) {
    let me = Person(name = args[0])

    fmt.print(me.say_hello())
}
